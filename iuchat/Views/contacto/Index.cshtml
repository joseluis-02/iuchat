
@{
    ViewBag.Title = "Contacto";
    Layout = "~/Views/_iuchat.cshtml";
}
<div class="container my-2">
    <div class="row">
        <div class="col-sm-8">
            <!--- \\\\\\\Caja de publicación-->
            <div class="card gedf-card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="posts-tab" data-toggle="tab" href="#posts" role="tab" aria-controls="posts" aria-selected="true">
                               Escribir publicación
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="images-tab" data-toggle="tab" role="tab" aria-controls="images" aria-selected="false" href="#images">
                                Publicar una foto
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
                            <div class="form-group">
                                <label class="sr-only" for="message">post</label>
                                <textarea class="form-control" id="message" rows="3" placeholder="Que estás pensando?"></textarea>
                            </div>

                        </div>
                        <div class="tab-pane fade" id="images" role="tabpanel" aria-labelledby="images-tab">
                            <div class="form-group">
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="customFile">
                                    <div id="preview"></div>
                                    <label class="custom-file-label" for="customFile">Selecciona una imagen</label>
                                </div>
                            </div>
                            <div class="py-4"></div>
                        </div>
                    </div>
                    <div class="btn-toolbar justify-content-between">
                        <div class="btn-group">
                            <button type="button" onclick="publicar()" class="btn btn-primary">Publicar</button>
                        </div>
                        <div class="btn-group">
                            <button id="btnGroupDrop1" type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                                    aria-expanded="false">
                                <i class="fa fa-globe"></i> Privacidad
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="btnGroupDrop1">
                                <a class="dropdown-item" href="#"><i class="fa fa-globe"></i> Publico</a>
                                <a class="dropdown-item" href="#"><i class="fa fa-users"></i> Amigos</a>
                                <a class="dropdown-item" href="#"><i class="fa fa-user"></i> Solo yo</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- fin de caja de publicación/////-->
            <!--Publicados-->
            <div id="mispublicaciones" class="container mt-sm-2 p-2">
              
            </div>
            <!--Finall panel publicado-->
        </div>
        <div class="col-sm-4">
            <div class="card rounded ">
                <div class="card-body">
                    <h6 class="card-title">Mis amigos</h6>
                    <hr>
                    <div id="misamigos" class="container-fluid">

                       
                    </div>



                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Recursos/script/ambiente/perfil.js"></script>